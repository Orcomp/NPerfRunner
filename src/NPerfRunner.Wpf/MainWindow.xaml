<Window x:Class="NPerfRunner.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Routing="clr-namespace:ReactiveUI.Routing;assembly=ReactiveUI.Routing"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel LastChildFill="True">
        <Expander HorizontalAlignment="Left" ExpandDirection="Right" IsExpanded="True" >
            <Expander.Header>
                <TextBlock Text="Settings">
                    <TextBlock.LayoutTransform>
                        <RotateTransform Angle="-90"/>
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Expander.Header>
            <Routing:ViewModelViewHost x:Name="SettingsHost" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" />
        </Expander>
        
    </DockPanel>
</Window>
